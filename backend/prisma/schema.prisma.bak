model PaymentOrder {
  id                  Int      @id @default(autoincrement())
  user                User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id             Int
  razorpay_order_id   String   @unique
  razorpay_payment_id String?
  razorpay_signature  String?
